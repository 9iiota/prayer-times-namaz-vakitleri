{
    "manifest_version": 3,
    "name": "Prayer Times / Namaz Vakitleri",
    "description": "Display prayer times for your location.",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
		{
			"js": ["content.js"],
			"matches": ["*://*.namazvakitleri.diyanet.gov.tr/*"]
		}
	],
    "host_permissions": [
		"*://*.namazvakitleri.diyanet.gov.tr/*"
	]
}